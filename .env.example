# LazyKitty API Server Configuration
# Copy this file to .env and customize

# Server port
PORT=3000

# Hostname (use 0.0.0.0 for Docker)
HOST=localhost

# Public URL for asset serving (set this to your actual domain in production)
BASE_URL=http://localhost:3000

# API authentication key (CHANGE THIS IN PRODUCTION!)
API_KEY=your-secure-api-key-here

# Storage path for builds and bundles
STORAGE_PATH=./storage

# KV database path
KV_PATH=./storage/kv.json

# Builder type: 'process' (local) or 'docker'
BUILDER_TYPE=process
